<script>
  // Location switching (only Zomaland has detailed content for now)
  const locationCards = document.querySelectorAll(".location-card");
  const activitiesPanel = document.getElementById("activitiesPanel");
  const zomalandActivities = document.getElementById("zomalandActivities");
  const detailView = document.getElementById("tasteYourTypeDetail");
  const comingSoonMessage = document.getElementById("comingSoonMessage");

  locationCards.forEach(card => {
    card.addEventListener("click", () => {
      locationCards.forEach(c => c.classList.remove("active"));
      card.classList.add("active");

      const loc = card.getAttribute("data-location");
      if (loc === "zomaland") {
        zomalandActivities.style.display = "flex";
        detailView.classList.add("active");
        comingSoonMessage.style.display = "none";
        activitiesPanel.querySelector(".panel-title").textContent = "Zomaland ¬∑ Mira x Qurkle";
        activitiesPanel.querySelector(".panel-subtitle").textContent = "Signature chemistry experiences ‚ú®";
      } else {
        zomalandActivities.style.display = "none";
        detailView.classList.remove("active");
        comingSoonMessage.style.display = "block";
        activitiesPanel.querySelector(".panel-title").textContent = card.querySelector(".location-name").textContent;
        activitiesPanel.querySelector(".panel-subtitle").textContent = "Programming schedule will be revealed soon.";
      }
    });
  });

  // Activity cards: only Taste Your Type opens detail (others could be extended later)
  const activityCards = document.querySelectorAll(".activity-card");
  activityCards.forEach(card => {
    card.addEventListener("click", () => {
      const activity = card.getAttribute("data-activity");
      if (activity !== "taste-your-type") return;

      activityCards.forEach(c => c.classList.remove("primary"));
      card.classList.add("primary");
      detailView.classList.add("active");
      detailView.scrollIntoView({ behavior: "smooth", block: "start" });
    });
  });

  // RSVP modal
  const rsvpButton = document.getElementById("rsvpButton");
  const modalBackdrop = document.getElementById("modalBackdrop");
  const modalClose = document.getElementById("modalClose");

  function openModal() {
    modalBackdrop.classList.add("active");
    modalBackdrop.setAttribute("aria-hidden", "false");
  }

  function closeModal() {
    modalBackdrop.classList.remove("active");
    modalBackdrop.setAttribute("aria-hidden", "true");
  }

  rsvpButton.addEventListener("click", openModal);
  modalClose.addEventListener("click", closeModal);
  modalBackdrop.addEventListener("click", (e) => {
    if (e.target === modalBackdrop) {
      closeModal();
    }
  });
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") closeModal();
  });
</script>
</body>
</html>
